<h1>New hour</h1>

<%= form_for :hour, url: hours_path do |f| %>
    <%= f.hidden_field :schedule_id, :value => params[:schedule] %>

    <p>
    <%= f.label :hours %><br>
    <%= f.text_field :hours %>
    </p>

    <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
    </p>

    <p>
    <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', hours_path %>
